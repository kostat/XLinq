<Project>
	<!-- https://docs.microsoft.com/en-us/nuget/reference/msbuild-targets -->
    <PropertyGroup>
        <VersionPrefix>1.0.0</VersionPrefix>
	<VersionSuffix>preview.3</VersionSuffix>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <Company>Streamx LLC</Company>
        <Authors>Konstantin Triger</Authors>
        <PackageLicenseExpression>AGPL-3.0-only</PackageLicenseExpression>
        <Copyright>Â© Streamx LLC. All rights reserved.</Copyright>
	<SourceRevisionId>date$([System.DateTime]::UtcNow.ToString("yyyy-MM-ddTHH:mmZ"))</SourceRevisionId>
	<GenerateDocumentationFile>true</GenerateDocumentationFile>
	<PackageProjectUrl>http://xlinq.live</PackageProjectUrl>
    </PropertyGroup>

    <Target Name="Obfuscar">
        <Exec Command="~/.dotnet/tools/obfuscar.console obfuscar.xml" WorkingDirectory="$(OutputPath)"/>
        <Copy SourceFiles="$(OutputPath)/obfuscated/$(AssemblyName).dll" DestinationFolder="$(OutputPath)" />
    </Target>

</Project>
